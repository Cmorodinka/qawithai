<!DOCTYPE html>
<html>
<head>
  <title>OpenAI API Test Generator</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1 class="my-4">OpenAI API Test Generator</h1>
    <div class="row">
      <div class="col-md-3">
        <div class="list-group">
          <%= link_to 'Test Generator', text_generator_index_path, class: 'list-group-item list-group-item-action active' %>
          <%= link_to 'Results', results_path, class: 'list-group-item list-group-item-action' %>
        </div>
      </div>
      <div class="col-md-9">
        <form id="text-generator-form">
          <div class="form-group">
            <label for="prompt">Enter a prompt:</label>
            <textarea class="form-control" id="prompt" name="prompt" style="height: 200px;" autofocus></textarea>
          </div>
          <button type="submit" id="generate-btn" class="btn btn-primary">Generate Test</button>
          <button type="button" id="clear-btn" class="btn btn-secondary ml-2">Clear Input</button>
        </form>
        <div class="mt-3">
          <%= link_to 'Show Results', results_path, class: 'btn btn-info', role: 'button' %>
        </div>
        <div id="generated-text" class="mt-4"></div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    document.getElementById('text-generator-form').addEventListener('submit', async (event) => {
      event.preventDefault();
      const prompt = document.getElementById('prompt').value;
      const response = await fetch('/text_generator/generate', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.getElementsByName('csrf-token')[0].content,
        },
        body: JSON.stringify({ prompt }),
      });

      const data = await response.json();
      document.getElementById('generated-text').innerText = data.generated_text;
      // Remove the following line to prevent redirection
      // window.location.href = `/results/${data.result_id}`;
    });

    document.getElementById('clear-btn').addEventListener('click', () => {
      document.getElementById('prompt').value = '';
      document.getElementById('generated-text').innerText = '';
    });
  </script>
</body>
</html>
